.features
	@extends .section
	background-color palette('Cyan', '500')
	.features-header
		@extends .section-heading
		.features-title-heading
			@extends .section-title
			color palette('Grey', '50')
	.features-box-a
		.icon
			margin 0 auto
		.features-title-box
			text-transform uppercase
			color palette('Grey', '50')
			font-weight 900
		.features-content-box
			color palette('Grey', '50')
			padding 0 2.5rem
@media (min-width: 768px)
	.features
		.features-box-a
			.features-content-box
				padding 0 1rem
		.box-b
			margin-top 2rem