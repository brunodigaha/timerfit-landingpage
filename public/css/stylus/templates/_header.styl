.header
	height 100vh
	background-image linear-gradient(
		rgba(0, 0, 0, 0.6),
		rgba(0, 0, 0, 0.6)),
		url('../img/header.jpg')
	@extends .background
	.header-content
		min-height @height
		display flex
		align-items center
		text-align @align-items
		.logo
			margin 0 auto
			width 167px
			height 50px
		.header-title
			font-size 3.4rem
			text-transform uppercase
			color palette('Grey', '50')
			font-weight 900
		.header-subtitle
			font-size 1.6rem
			text-transform uppercase
			color palette('Grey', '50')
			font-weight 700
		.youtube
			border-radius 500px
			text-transform uppercase
			font-style italic
			font-weight 900
			font-size 1.2rem
			&:focus
				outline 0 none
@media (min-width: 768px)
	body
		font-size 16px
	.header
		.header-content
			.logo
				width 233px
				height 70px
			.header-title
				font-size 6rem
			.header-subtitle
				font-size 2rem
			.youtube
				font-size 2rem
				margin-top 1.5rem
				padding 11px 47px 9px