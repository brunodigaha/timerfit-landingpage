.footer
	@extends .section
	background-color palette('Blue Grey', '900')
	.footer-content
		.footer-description
			.icon
				margin-bottom 15px
			.footer-text-description
				color palette('Grey', '50')
				font-style italic
		.footer-links
			.list-inline
				a
					color palette('Grey')
					text-transform uppercase
					&:hover
						color palette('Grey', '50')
		.footer-social
			.footer-social-box
				a
					margin-right 5px
					.icon
						display inline-block
		.footer-address
			.footer-address-box
				font-style italic
				color palette('Grey', '50')