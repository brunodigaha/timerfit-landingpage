.content-header
	padding-top 25px
	background-color palette('Grey', '50')
	color palette('Grey', '900')
	.title-content
		font-style normal
		font-weight 900
		font-size 3em
	.small
		max-width 200px
.content-a
	padding 20px 0
	background-color palette('Grey', '50')
	.title-content-heading
		margin-top 0
		font-weight 700
		text-align center
	.lead
		text-align center
	.img-content
		margin 0 auto
.content-b
	padding 20px 0
	border-top 1px solid palette('Grey', '300')
	border-bottom @border-top
	.title-content-heading
		margin-top 0
		font-weight 700
		text-align center
	.lead
		text-align center
	.img-content
		margin 0 auto
@media (min-width: 768px)
	.content-header
		padding-bottom 35px
	.content-a
		padding 50px 0
		.title-content-heading
			text-align left
		.lead
			text-align left
		.img-content
			float right
	.content-b
		padding 50px 0
		.title-content-heading
			text-align left
		.lead
			text-align left
		.img-content
			float left
		